{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "es2022",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  }
}
